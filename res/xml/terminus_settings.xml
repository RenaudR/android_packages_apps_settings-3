<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
        android:title="@string/terminus_settings_title" >

        <PreferenceScreen
                android:key="clock_style_pref"
                android:fragment="com.android.settings.terminus.StatusBarClockStyle"
                android:title="@string/status_bar_clock" />

        <PreferenceScreen
                android:key="navigation_bar"
                android:fragment="com.android.settings.terminus.NavigationBarSettings"
                android:title="@string/navigation_bar_title" />

        <PreferenceScreen
                android:key="volume_keys_settings"
                android:title="@string/volume_keys_title"
                android:persistent="false"
                android:fragment="com.android.settings.terminus.VolumeKeys" />

        <PreferenceScreen
                android:id="@+id/app_circle_sidebar"
                android:title="@string/app_circle_bar_title"
                android:summary="@string/app_circle_sidebar_summary_real"
                android:fragment="com.android.settings.terminus.AppCircleSidebar" />

</PreferenceScreen>
